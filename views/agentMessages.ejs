<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">
<!-- Contains head of website -->
<base href="/">
<head>
  <% include partials/head %>
  <link rel="stylesheet" href="css/sale.css"></link> <!-- styleing for sale page -->
</head>
<body>
  <!-- Contains header of website -->
  <% include partials/header %>
        <div class="container">
            <h2>Messages from Potentail Buyers:</h2>
                <% for(var i = 0; i < saleMessages.length; i++) { %>
                    <div class="media">
                    <div class="media-left media-top">
                        <img src="img_avatar1.png" class="media-object" style="width:80px">
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"><a href="forSale/<%= saleMessages[i].saleId %>/"><%= saleMessages[i].saleId %></a></h4>
                        <h4 class="media-heading"><%= saleMessages[i].phoneNo %></h4>
                        <p><%= saleMessages[i].messageContent %></p>
                    </div>
                    </div>
                <hr>
                <% } %>
        </div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBPXF-zkLqKND8w5ktBN5bdlTkQSVbw950&libraries=places&callback=initMap" async defer></script>
        <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
      </body>
       <!-- Contains header of website -->
       <% include partials/footer %>
      </html>