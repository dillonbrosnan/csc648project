            console.log(json.listings[i].address, 'createmarkers');   
            //let lat1 = getLat(json.listings[i].address);
            let lng1 = json.listings[i].lng;
            var myLatLng={lat: lat1, lng: lng1};
            marker = new google.maps.Marker({
              map: map,
              position: myLatLng,
              title: json.listings[i].address
            });
            markers.push(marker);
            //console.log(markers);
            google.maps.event.addListener(marker, 'click', function(){
              infowindow.setContent('<div onclick="getInfo(this.innerHTML)">' +  json.listings[i].address + '</div>');
