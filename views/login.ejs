<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">
<base href="/">
	<!-- Contains header of website -->
  	<% include partials/head %>

<!-- Contains head of website -->
<head>
  <link rel="stylesheet" href="css/login.css"></link>	<!-- styling for login page -->
  
</head>


<body>

  	<!-- Contains header of website -->
  	<% include partials/header %>



  	<!-- Contains body of page -->
  	<div class="container loginContainer">

  		

		<div class="row main">
			<div class="main-login main-center">

				<% if(role == 'agent')	{ %>
					<h1><strong>Login for Agents</strong></h1>
					<a href="/login">Looking for user login? Click here</a>
				<% } else if(role == 'user') { %>
					<h1> <strong>Login for Users</strong></h1>
					<a href="/login/agent">Looking for agent login? Click here</a>
				<% } 	%>

				<!-- To determine what form to use for each role -->
				<% if(role == 'agent')	{ %>
					<form class="form-horizontal" method="post" action="login/<%= role %>">
				<% } else if(role == 'user') { %>
					<form class="form-horizontal" method="post" action="login/">
				<% } else if(role == 'admin') { %>
					<form class="form-horizontal" method="post" action="login/<%= role %>">
				<% } 	%>

					<div class="form-group">
						<label for="username" class="cols-sm-2 control-label">Username</label>
						<div class="cols-sm-10">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
								<% if(typeof username != 'undefined')	{ %>
									<input type="text" class="form-control" name="username" id="username"  
									placeholder="Enter Username" value="<%= username %>"/>
								<% }  else { %>
									<input type="text" class="form-control" name="username" id="username"  
									placeholder="Enter Username"/>
								<% }  %>
							</div>
						</div>
					</div>

					<div class="form-group">
						<label for="password" class="cols-sm-2 control-label">Password</label>
						<div class="cols-sm-10">
							<div class="input-group">
								<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
								<input type="password" class="form-control" name="password" id="password"  placeholder="Enter Password"/>
							</div>
						</div>
					</div>

					<div class="form-group ">
						<input type="submit" class="btn btn-primary btn-block login-button" value='Login'></input>
					</div>
					
					<hr class = "separation">
					<% if(role == 'agent')	{ %>
						<a href="/login">Looking for user login? Click here</a>
						<br><span>Don't have an account?<a href="/register/agent"> Create one here!</a></span>
					<% } else if(role == 'user') { %>
						<a href="/login/agent">Looking for agent login? Click here</a>
						<br><span>Don't have an account?<a href="/register"> Create one here!</a></span>
					<% } 	%>

				</form>

			</div>

		</div>
    </div>
    <!-- End of search box area -->
    
  <footer>
    <% include partials/footer %>
  </footer>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</body>
</html>