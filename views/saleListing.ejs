<!doctype html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" dir="ltr">

<!-- Contains head of website -->
<head>
    <% include partials/head %>
    <link rel="stylesheet" href="/css/saleListing.css"></link><!-- styling for sale listing page -->
</head>


<body>

    <!-- Contains header of website -->
    <% include partials/header %>
 <div class="row main"> </div>
  <h2>$ <%= saleListing[0].price %>, <%= saleListing[0].formattedAddress%> </h2> <h2><small><%= saleListing[0].beds%> Beds, <%= saleListing[0].baths%> Baths, <%= saleListing[0].sqFt%> SqFt, <%= saleListing[0].lotType%></small></h2>
 <div class="row main"> </div>
<div class="container">
    <div id="main_area">
        <!-- Slider -->
        <div class="row">
            <div class="col-md-6 hidden-xs hidden-sm" id="slider-thumbs">
                <!-- Bottom switcher of slider -->
                <ul class="hide-bullets">
                    <li class="col-sm-3">
                        <a class="thumbnail" id="carousel-selector-0">
                            <img src="/saleImages/<%= saleListing[0].imageId %>.jpg">
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-sm-6">
                <div class="col-xs-12" id="slider">
                    <!-- Top part of the slider -->
                    <div class="row">
                        <div class="col-sm-12" id="carousel-bounding-box">
                            <div class="carousel slide" id="myCarousel">
                                <!-- Carousel items -->
                                <div class="carousel-inner">
                                    <div class="active item" data-slide-number="0">
                                        <img src="/saleImages/<%= saleListing[0].imageId %>.jpg"></div>

                                    <div class="item" data-slide-number="1">
                                        <img src="/saleImages/<%= saleListing[0].imageId %>.jpg"></div>

                                </div>
                                <!-- Carousel nav -->
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/Slider-->
        </div>

    </div>
</div>

<hr>

 
 <div class="row">
            <div class="col-lg-12">
             <h3 class="page-header" style="width: 400px;">Home Details</h3>
            </div>
            <div class="col-md-6">
              
                    <ul>
                        <li>Lot Type: <%= saleListing[0].lotType%></li>
                        <li>Bedrooms: <%= saleListing[0].beds%></li>
                        <li>Bathrooms: <%= saleListing[0].baths%></li>
                        <li>Year Built: <%= saleListing[0].yearBuilt%></li>
                        <li>Lot Size: <%= saleListing[0].lotSqFt%> SqFt</li>
                    </ul>
                    
                </div>   
            </div>

   <div class="row">
            <div class="col-lg-12">
             <h3 class="page-header" style="width: 400px;">Description</h3>
            </div>
            <div class="col-md-6">
              
                    <p style="width: 1000px;"><%= saleListing[0].description %></p>
                </div>   
            </div>


    <!-- Contains body of page -->
    
    <!-- End of search box area -->

  <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</body>
</html>